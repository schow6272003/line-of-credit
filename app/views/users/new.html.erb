<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 style="text-align:center">Sign Up</h1>
    <form id="new-user-registration">
      <div class="form-group">
        <label for="signUpUserFullName">Full Name</label>
        <input type="text" class="form-control" id="signUpUserFullName"  placeholder="Enter full name">
      </div>
      <div class="form-group">
        <label for="signUpUserEmail">Email address</label>
        <input type="email" class="form-control" id="signUpUserEmail" name="signUpUserEmail" placeholder="Enter email" required>
      </div>
      <div class="form-group">
        <label for="signUpUserPassword">Password</label>
        <input type="password" class="form-control" id="signUpUserPassword" name="signUpUserPassword"  placeholder="Password" required>
      </div>
      <div class="form-group">
        <label for="signUpUserConfirmPassword">Confirm Password</label>
        <input type="password" class="form-control" id="signUpUserConfirmPassword"  name="signUpUserConfirmPassword" placeholder="Password" required>
      </div>
      <button type="submit" class="btn btn-primary">Create My Account</button>
    </form>
  </div>
</div>